!!!
%html
	%head
		%meta{ :charset => "utf-8" }/
		%meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
		{% if page.title %}
		{% if page.keyword %}
		%title {{ page.title }} - {{ page.keyword }} -  {{ site.name }}
		{% else %}
		%title {{ page.title }} - {{ site.name }}
		{% endif %}
		{% else %}
		%title {{ site.name }}
		{% endif %}
		%meta{ :name => "viewport", :content => "width=device-width" }
		%meta{ :name => "description", :content => "{{ page.seo_description }}" }

		%link{ :rel => "stylesheet", :href => "{{ site.url}}/css/griddy.css" }
		%link{ :rel => "stylesheet", :href => "{{ site.url}}/css/style.css" }
		%link{ :rel => "stylesheet", :href => "{{ site.url}}/css/syntax-native.css" }

		%script{ :src => "{{ site.url}}/javascript/vendor/jquery-2.0.3.min.js", :type => "text/javascript" }

	%body
		.page
			.row-12
				.col-12.header
					%h1.brand
						%a{ :href => "/" } {{ site.name }}
					.punchline
						mokagio's blabbering on software

				.col-12
					{{ content }}

				.col-12.footer
					made with &#x2665 by mokagio since 2013
					\-
					twitter: 
					%a{ :href => "http://twitter.com/mokagio/"} @mokagio
					\- 
					github: 
					%a{ :href => "http://github.com/mokagio/" } mokagio
						

		%script{ :src => "{{ site.url}}/javascript/code_block_style.js", :type => "text/javascript" }
		%script{ :src => "{{ site.url}}/javascript/click_image.js", :type => "text/javascript" }
		%script{ :src => "{{ site.url}}/javascript/link_in_new_tab.js", :type => "text/javascript" }

		:javascript
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-43554041-1', 'mokacoding.com');
			ga('send', 'pageview');