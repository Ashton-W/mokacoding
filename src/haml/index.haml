:plain
	---
	layout: default
	---

#home
	.posts
		{% for post in paginator.posts %}
		.post-container
			%h2.post-title
				%a{ :href => "{{ site.url }}{{ post.url }}" } {{ post.title }}
			%p#post-date
				{{ post.date | date_to_string }}
			.post
				{{ post.content }}
		{% endfor %}

#paginator
	{% if paginator.previous_page %}
	{% if paginator.previous_page != 1 %}
	%a{ :href => "/page{{ paginator.previous_page}}"}Prev
	{% else %}
	%a{ :href => "/"}Prev
	{% endif %}
	{% endif %}

	{% if paginator.previous_page && paginator.next_page %}
	%span.primary-color
		|
	{% endif %}

	{% if paginator.next_page %}
	%a{ :href => "/page{{ paginator.next_page}}"}Next
	{% endif %}
